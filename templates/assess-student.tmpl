{{template "base"}}
{{define "title"}} oceni student{{end}}
{{define "main"}}
<form  method="post">
    <div class="container">
            <label for="students"><b>Избери ученик</b></label>
                <select id="students" name="studentName">
                    {{range $index, $value := .}}
                        {{if eq $index 0}}
                            {{range $value}}
                                <option>{{.}}</option>
                            {{end}}
                        {{end}}
                    {{end}}
                </select>

            <label for="marks"><b>Избери оценка:</b></label>
                <select id="marks" name="markValue">
                    {{range $index, $value := .}}
                        {{if eq $index 1}}
                            {{range $value}}
                                 <option>{{.}}</option>
                            {{end}}
                        {{end}}
                    {{end}}
                </select>

        <label for="subjects"><b>Избери предмет:</b></label>
            <select id="subjects" name="subjectTitle">
                {{range $index, $value := .}}
                    {{if eq $index 2}}
                        {{range $value}}
                             <option>{{.}}</option>
                        {{end}}
                    {{end}}
                {{end}}
            </select>

        <label for="date">Избери дата:</label>
        <input type="date" id="date" name="date" min = "2020-09-15" max = "2021-01-31" >

        <label for="teacherName"><b>Teacher</b></label>
        <input type="text" id="teacherName" name="teacherName" required>

        <button type="submit">OK</button>
        <label>
            <input type="checkbox" checked="checked" name="remember"> Remember me
        </label>
    </div>

    <div class="container" style="background-color:#f1f1f1">
        <button type="button" class="cancelbtn">Cancel</button>
        <span class="psw">Forgot <a href="#">password?</a></span>
    </div>
</form>
<script>
    const picker = document.getElementById('date');
    picker.setAttribute()
    picker.addEventListener('input', function(e){
        var day = new Date(this.value).getUTCDay();
        if([6,0].includes(day)){
            e.preventDefault();
            this.value = '';
            alert('Изберете делничен ден');
        }
    });
</script>
{{end}}
